---
import type { Translation } from "@/i18n";

import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Image } from "astro:assets";

import notificationsImage from "@/assets/img/notifications.png"
import calendar from "@/assets/img/calendar.png"
import gradient from "@/assets/img/gradient_1.png";
import Link from "@/components/ui/link";
interface Props {
    t: Translation
}

const {
    t,
} = Astro.props;
---

<div class="flex flex-col gap-16 items-center">
    <div class="flex flex-col gap-3 text-center px-4">
        <h2 class="text-3xl font-bold">{t.dashboard.notificationsAndCalendarTitle}</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">
            {t.dashboard.notificationsAndCalendarDescription}
        </p>
    </div>
    <div class="grid gap-3 px-4 text-sm sm:grid-cols-2 w-full">
        <div class="flex flex-col-reverse md:flex-col gap-3 h-120 sm:h-140">
            <Card className="flex min-h-fit rounded-md"
                style={{
                    backgroundImage: `url('${gradient.src}')`,
                    backgroundSize: "cover",
                    backgroundPosition: "top left",
                }}
            >
                <CardContent className="flex items-center flex-col sm:flex-row gap-3 p-8 justify-between w-full">
                    <p class="max-w-xs text-white font-semibold text-center sm:text-left">
                        {t.setup.bookADemoCTA}
                    </p>
                    <Link href="demo">
                        <Button variant="secondary">
                            {t.bookDemo}
                        </Button>
                    </Link>
                </CardContent>
            </Card>
            <Card className="flex flex-col items-center overflow-hidden rounded-md bg-gray-50 text-center">
                <CardHeader className="flex flex-col items-center gap-3">
                    <p class="max-w-md">
                        {t.dashboard.calendarDescription}
                    </p>
                </CardHeader>
                <CardFooter>
                    <Image src={calendar} alt="Operations" />
                </CardFooter>
            </Card>
        </div>
        <Card className="flex h-140 flex-col items-center gap-6 overflow-hidden rounded-md bg-gray-50 text-center">
            <CardHeader className="flex flex-col items-center gap-3">
                <p class="max-w-md">
                    {t.dashboard.realTimeNotificationsExtendedDescription}
                </p>
            </CardHeader>
            <CardFooter>
                <Image src={notificationsImage} alt="Mail" class="h-140 w-auto"/>
            </CardFooter>
        </Card>
    </div>
</div>
