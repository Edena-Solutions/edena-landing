---
import type { Translation } from "@/i18n";

import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";

import heroImage from "@/assets/img/screenshots/dashboard/dashboard_hero.png";
import quickActions from "@/assets/img/screenshots/dashboard/dashboard_quickactions.png";
import Link from "@/components/ui/link";
interface Props {
    t: Translation;
}

const { t } = Astro.props;
---

<div class="grid gap-3">
    <Card
        className="flex flex-col items-center justify-start text-center h-110 sm:h-160 overflow-hidden bg-gray-50 gap-6"
    >
        <CardHeader className="pb-4">
            <h1 class="text-2xl font-bold max-w-3xl">{t.dashboard.mainTitle}</h1>
        </CardHeader>
        <CardContent>
            <p class="text-muted-foreground max-w-150">
                {t.dashboard.mainDescription}
            </p>
        </CardContent>
        <CardFooter>
            <Image src={heroImage} alt="Hero" loading="eager" class="sm:w-3/4 mx-auto" />
        </CardFooter>
    </Card>

    <div class="grid sm:grid-cols-2 gap-3 px-4">
        <Card
            className="flex rounded flex-col items-center justify-center text-center bg-gradient-primary"
        >
            <CardHeader className="pb-4">
                <h2 class="text-2xl font-bold max-w-100">{t.dashboard.notificationsTitle}</h2>
            </CardHeader>
            <CardContent className="flex flex-col gap-6 items-center">
                <p class="max-w-100">
                    {t.dashboard.notificationsDescription}
                </p>
            </CardContent>
            <CardFooter className="flex gap-3">
                <BookDemoButton t={t} variant="secondary" />
            </CardFooter>
        </Card>

        <Card
            className="flex rounded flex-col items-center text-center gap-6 h-140 overflow-hidden bg-gray-50"
        >
            <CardHeader className="pb-2">
                <h2 class="text-2xl font-bold">{t.dashboard.quickActionsTitle}</h2>
            </CardHeader>
            <CardContent className="flex flex-col gap-3 items-center">
                <p class="text-muted-foreground max-w-140">
                    {t.dashboard.quickActionsDescription}
                </p>
            </CardContent>
            <CardFooter>
                <Image src={quickActions} alt="Organization" class="w-70" />
            </CardFooter>
        </Card>
    </div>
</div>
