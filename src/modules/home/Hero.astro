---
import type { Translation } from "@/i18n";

import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";

import gradient from "@/assets/img/gradient_1.png"
import Link from "@/components/ui/link";
import GSAPSection from "@/components/ui/gsap-section";
import verifactuImage from "@/assets/img/logos/verifactu.png"

interface Props {
    t: Translation,
}

const { 
    t,
} = Astro.props;
---

<GSAPSection client:load className="grid gap-3" animationType="opacity">
  <Card className="flex flex-col items-center justify-start text-center overflow-hidden bg-gray-50 gap-6">
    <CardHeader className="pb-4">
      <h1 class="text-3xl font-bold max-w-xl">{t.hero.mainTitle}</h1>
    </CardHeader>
    <CardContent className="flex flex-col gap-10 items-center">
      <p class="text-muted-foreground max-w-150">
        {t.hero.mainDescription}
      </p>
      <div class="flex flex-col items-center gap-1">
        <Image src={verifactuImage} alt="Verifactu" loading="eager" class="w-30" />
        <p class="text-muted-foreground max-w-40 text-xs">{t.hero.verifactuCertified}</p>
      </div>
    </CardContent>
  </Card>
  
  <div class="grid sm:grid-cols-2 gap-3 px-4">
    <Card
      className="flex rounded flex-col items-center justify-center bg-cover bg-center text-center text-white"
      style={{
        backgroundImage: `url('${gradient.src}')`,
        backgroundSize: "cover",
        backgroundPosition: "left",
      }}
    >
      <CardHeader className="pb-4">
        <h2 class="text-3xl font-bold max-w-100">{t.hero.mobileTitle}</h2>
      </CardHeader>
      <CardContent className="flex flex-col gap-6 items-center">
        <p class=" max-w-100">
          {t.hero.mobileDescription}
        </p>
      </CardContent>
      <CardFooter>
        <Link href="app">
            <Button variant="secondary">
                    {t.knowMore}
            </Button>
        </Link>
      </CardFooter>
    </Card>
    
    <Card className="flex rounded flex-col items-center text-center gap-6 overflow-hidden bg-gray-50">
      <CardHeader className="pb-2">
        <h2 class="text-3xl font-bold">{t.hero.orgTitle}</h2>
      </CardHeader>
      <CardContent className="flex flex-col gap-4 sm:gap-8 items-center">
        <p class="text-muted-foreground max-w-140">
          {t.hero.orgDescription}
        </p>
        <BookDemoButton t={t} />
      </CardContent>
    </Card>
  </div>
</GSAPSection>