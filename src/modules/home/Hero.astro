---
import type { Translation } from "@/i18n";

import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";

import GooglePlayLogo from "@/assets/img/logos/google.svg"
import AppleLogo from "@/assets/img/logos/apple.svg"
import heroImage from "@/assets/img/hero.png"
import organizationImage from "@/assets/img/organization.png"
import gradient from "@/assets/img/gradient_1.png"
interface Props {
    t: Translation
}

const { 
    t
} = Astro.props;
---

<div class="grid gap-3">
  <Card className="flex flex-col items-center justify-start text-center sm:h-160 overflow-hidden bg-gray-50 gap-6">
    <CardHeader className="pb-4">
      <h1 class="text-3xl font-bold">{t.hero.mainTitle}</h1>
    </CardHeader>
    <CardContent>
      <p class="text-muted-foreground max-w-150">
        {t.hero.mainDescription}
      </p>
    </CardContent>
    <CardFooter>
      <Image src={heroImage} alt="Hero" loading="eager" />
    </CardFooter>
  </Card>
  
  <div class="grid sm:grid-cols-2 gap-3 px-4">
    <Card
      className="flex rounded-md flex-col items-center justify-center bg-cover bg-center text-center text-white"
      style={{
        backgroundImage: `url('${gradient.src}')`,
        backgroundSize: "cover",
        backgroundPosition: "left",
      }}
    >
      <CardHeader className="pb-4">
        <h2 class="text-3xl font-bold max-w-60">{t.hero.mobileTitle}</h2>
      </CardHeader>
      <CardContent className="flex flex-col gap-6 items-center">
        <p class=" max-w-100">
          {t.hero.mobileDescription}
        </p>
      </CardContent>
      <!-- <CardFooter className="flex flex-col gap-3 items-center">
        <p class="text-white">
          {t.downloadTheApp}
        </p>
        <div class="flex gap-3">
          <Button className="flex gap-2 items-center" variant="secondary">
            <Image src={GooglePlayLogo} alt="Google Play logo" class="w-3" />
            Google Play
          </Button>
          <Button className="flex gap-2 items-center" variant="secondary">
            <Image src={AppleLogo} alt="Apple logo" class="w-3 mb-[2px]" />
            App Store
          </Button>
        </div>
      </CardFooter> -->
    </Card>
    
    <Card className="flex rounded-md flex-col items-center text-center gap-6 h-140 overflow-hidden bg-gray-50">
      <CardHeader className="pb-2">
        <h2 class="text-3xl font-bold">{t.hero.orgTitle}</h2>
      </CardHeader>
      <CardContent className="flex flex-col gap-3 items-center">
        <p class="text-muted-foreground max-w-140">
          {t.hero.orgDescription}
        </p>
        <div class="flex gap-3">
          <Button variant="outline">
            {t.knowMore}
          </Button>
          <Button>
            {t.bookDemo}
          </Button>
        </div>
      </CardContent>
      <CardFooter>
        <Image src={organizationImage} alt="Organization" />
      </CardFooter>
    </Card>
  </div>
</div>