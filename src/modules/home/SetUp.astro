---
import type { Translation } from "@/i18n";

import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";

import mailImage from "@/assets/img/screenshots/shared/mail.png";
import heroImage from "@/assets/img/screenshots/dashboard/dashboard_hero.png";
import gradient from "@/assets/img/gradient_1.png";
import Link from "@/components/ui/link";
import GSAPSection from "@/components/ui/gsap-section";
interface Props {
    t: Translation;
}

const { t } = Astro.props;
---

<GSAPSection client:load className="flex flex-col gap-16 items-center">
    <div class="flex flex-col gap-3 px-4 max-w-xl text-center">
        <h2 class="text-2xl font-bold">{t.setup.title}</h2>
        <p class="text-muted-foreground">
            {t.setup.description}
        </p>
    </div>
    <div class="grid gap-3 px-4 text-sm sm:grid-cols-2">
        <Card
            className="flex h-150 sm:h-140 flex-col items-center gap-6 overflow-hidden rounded bg-gray-50 text-center"
        >
            <CardHeader className="flex flex-col items-center gap-3">
                <p class="max-w-md">
                    {t.setup.onboardingDescription}
                </p>
            </CardHeader>
            <CardFooter>
                <Image src={mailImage} alt="Mail" class="w-70" />
            </CardFooter>
        </Card>
        <div class="flex flex-col-reverse md:flex-col gap-3 sm:h-140">
            <Card
                className="flex min-h-fit rounded"
                style={{
                    backgroundImage: `url('${gradient.src}')`,
                    backgroundSize: "cover",
                    backgroundPosition: "top left",
                }}
            >
                <CardContent
                    className="flex items-center flex-col sm:flex-row gap-3 p-8 justify-between w-full"
                >
                    <p class="max-w-sm text-white font-semibold text-center sm:text-left">
                        {t.setup.bookADemoCTA}
                    </p>
                    <BookDemoButton t={t} variant="secondary" />
                </CardContent>
            </Card>
            <Card
                className="flex flex-col items-center overflow-hidden rounded bg-gray-50 text-center h-80 sm:h-auto"
            >
                <CardHeader className="flex flex-col items-center gap-3">
                    <p class="max-w-md">
                        {t.setup.operationsDescription}
                    </p>
                </CardHeader>
                <CardFooter>
                    <Image src={heroImage} alt="Operations" />
                </CardFooter>
            </Card>
        </div>
    </div>
</GSAPSection>
