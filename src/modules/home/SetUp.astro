---
import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Image } from "astro:assets";

interface Props {
  onboardingDescription: string;
  operationsDescription: string;
  bookADemoCTA: string;
  companyConfigImage: ImageMetadata;
  mailImage: ImageMetadata;
}

const { 
  onboardingDescription,
  operationsDescription,
  companyConfigImage,
  mailImage,
  bookADemoCTA
} = Astro.props;
---
<div class="flex flex-col gap-16 ">
    <div class="text-center">
        <h2 class="text-3xl font-bold">Fast Setup</h2>
        <p class="text-muted-foreground">
            A complete solution for onboarding families and managing your school
        </p>
    </div>
    <div class="grid gap-3 px-4 text-sm sm:grid-cols-2">
        <Card className="flex h-140 flex-col items-center gap-6 overflow-hidden rounded-md bg-gray-50 text-center">
            <CardHeader className="flex flex-col items-center gap-4">
                <p class="max-w-md">
                    {onboardingDescription}
                </p>
            </CardHeader>
            <CardFooter>
                <Image src={mailImage} alt="Mail" class="h-140 w-auto"/>
            </CardFooter>
        </Card>
        <div class="flex flex-col-reverse md:flex-col gap-3 h-140">
            <Card className="flex min-h-fit rounded-md"
                style={{
                    backgroundImage: `url('src/assets/img/gradient_1.png')`,
                    backgroundSize: "cover",
                    backgroundPosition: "top left",
                }}
            >
                <CardContent className="flex items-center gap-4 p-8 justify-between w-full">
                    <p class="max-w-xs text-white font-semibold">
                        {bookADemoCTA}
                    </p>
                    <Button variant="secondary">
                        Book a demo
                    </Button>
                </CardContent>
            </Card>
            <Card className="flex flex-col items-center overflow-hidden rounded-md bg-gray-50 text-center">
                <CardHeader className="flex flex-col items-center gap-4">
                    <p class="max-w-md">
                        {operationsDescription}
                    </p>
                </CardHeader>
                <CardFooter>
                    <Image src={companyConfigImage} alt="Operations" />
                </CardFooter>
            </Card>
        </div>
    </div>
</div>
