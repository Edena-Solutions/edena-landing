---
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import favicon from "@/assets/img/logos/logo-small.svg";
import BookDemoButton from "@/components/BookDemoButton.astro";

import { translations } from "@/i18n/index.ts";
import Link from "@/components/ui/link";

const { lang } = Astro.props;
const t = translations[lang as keyof typeof translations];
---

<div class="flex flex-col items-center gap-10 px-10">
    <Image src={favicon} alt={t.altText.conclusionLogo} class="w-30" />
    <h2 class="text-xl font-bold text-center">{t.conclusion.title}</h2>
    <p class="text-muted-foreground max-w-2xl text-center">
        {t.conclusion.description}
    </p>
    <BookDemoButton t={t} className="w-fit" />
</div>
