---
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import favicon from "public/assets/img/favicon.svg"

import { translations } from '@/i18n/index.ts';

const { lang } = Astro.props;
const t = translations[lang as keyof typeof translations];

---
<div class="flex flex-col items-center gap-16 px-10">
    <Image src={favicon} alt="Edena" class="w-30" />
    <div class="text-center max-w-200 flex flex-col gap-4 items-center">
        <h2 class="text-3xl font-bold">{t.conclusion.title}</h2>
        <p class="text-muted-foreground sm:text-xl">
           {t.conclusion.description}
        </p>
        <Button className="w-fit">
            {t.bookDemo}
        </Button>
    </div>
</div>
