---
import type { Translation } from "@/i18n";
import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";
import invoiceDetail from "@/assets/img/screenshots/invoice/invoice_detail.png";
import emailInvoice from "@/assets/img/screenshots/invoice/invoice_email.png";
import gradient from "@/assets/img/gradient_1.png";
import Link from "@/components/ui/link";
import GSAPSection from "@/components/ui/gsap-section";
interface Props {
    t: Translation;
}
const { t } = Astro.props;
---

<GSAPSection client:load className="flex flex-col gap-16 items-center">
    <div class="flex flex-col gap-3 text-center px-4">
        <h2 class="text-2xl font-bold">{t.finance.automationTitle}</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">
            {t.finance.automationDescription}
        </p>
    </div>
    <div class="grid gap-3 px-4 text-sm sm:grid-cols-2 w-full">
        <Card
            className="flex h-100 sm:h-100 sm:h-140 flex-col items-center gap-6 overflow-hidden rounded bg-gray-50 text-center"
        >
            <CardHeader className="flex flex-col items-center gap-3">
                <h2 class="text-2xl font-bold">{t.finance.analyticsTitle}</h2>
                <p class="max-w-md">
                    {t.finance.analyticsDescription}
                </p>
            </CardHeader>
            <CardFooter>
                <Image src={invoiceDetail} alt="Invoice Details" class="w-auto" />
            </CardFooter>
        </Card>
        <div class="flex flex-col-reverse md:flex-col gap-3 sm:h-140">
            <Card
                className="flex min-h-fit rounded"
                style={{
                    backgroundImage: `url('${gradient.src}')`,
                    backgroundSize: "cover",
                    backgroundPosition: "top left",
                }}
            >
                <CardContent
                    className="flex items-center flex-col sm:flex-row gap-3 p-8 justify-between w-full"
                >
                    <p class="max-w-sm text-white font-semibold text-center sm:text-left">
                        {t.setup.bookADemoCTA}
                    </p>
                    <BookDemoButton t={t} variant="secondary" />
                </CardContent>
            </Card>
            <Card
                className="flex flex-col items-center overflow-hidden rounded bg-gray-50 text-center h-60 sm:h-auto"
            >
                <CardHeader className="flex flex-col items-center gap-3">
                    <p class="max-w-md">
                        {t.finance.paperlessBillingDescription}
                    </p>
                </CardHeader>
                <CardFooter>
                    <Image src={emailInvoice} alt="Operations" />
                </CardFooter>
            </Card>
        </div>
    </div>
</GSAPSection>
