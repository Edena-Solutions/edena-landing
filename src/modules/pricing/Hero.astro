---
import type { Translation } from '@/i18n';

interface Props {
    t: Translation
}

const {
    t,
} = Astro.props;
---

<div class="text-center flex flex-col gap-6 items-center pt-16 max-w-2xl mx-auto">
  <h2 class="text-3xl font-bold">{t.pricing.title}</h2>
  <p>{t.pricing.description}</p>
</div>
