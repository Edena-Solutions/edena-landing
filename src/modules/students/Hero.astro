---
import type { Translation } from "@/i18n";

import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";

import heroImage from "@/assets/img/screenshots/students/students_hero.png";
import studentDetail from "@/assets/img/screenshots/students/student_detail.png";
import Link from "@/components/ui/link";
interface Props {
    t: Translation;
}

const { t } = Astro.props;
---

<div class="grid gap-4">
    <Card
        className="flex flex-col items-center justify-start text-center h-110 sm:h-160 overflow-hidden bg-gray-50 gap-4"
    >
        <CardHeader>
            <h1 class="text-xl font-bold max-w-2xl">{t.students.mainTitle}</h1>
        </CardHeader>
        <CardContent className="flex flex-col gap-6 items-center">
            <p class="text-muted-foreground max-w-150">
                {t.students.mainDescription}
            </p>
        </CardContent>
        <CardFooter className="flex flex-col gap-4">
            <BookDemoButton t={t} />
            <Image
                src={heroImage}
                alt="Hero"
                loading="eager"
                class="w-full mx-auto object-contain"
                style="aspect-ratio: 16/9;"
            />
        </CardFooter>
    </Card>

    <div class="grid sm:grid-cols-2 gap-4 px-4">
        <Card
            className="flex rounded flex-col gap-4 items-center justify-center text-center bg-gradient-primary"
        >
            <CardHeader>
                <h2 class="text-xl font-bold max-w-100">{t.students.studentInvoicingTitle}</h2>
            </CardHeader>
            <CardContent className="flex flex-col gap-6 items-center">
                <p class="max-w-100">
                    {t.students.studentInvoicingDescription}
                </p>
            </CardContent>
            <CardFooter className="flex gap-4">
                <BookDemoButton t={t} variant="secondary" />
            </CardFooter>
        </Card>

        <Card
            className="flex rounded flex-col items-center text-center overflow-hidden bg-gray-50 h-90 md:h-110"
        >
            <CardHeader className="pb-2">
                <h2 class="text-xl font-bold">{t.students.studentDetailTitle}</h2>
            </CardHeader>
            <CardContent className="flex flex-col gap-4 items-center">
                <p class="text-muted-foreground max-w-100">
                    {t.students.studentDetailDescription}
                </p>
            </CardContent>
            <CardFooter>
                <Image
                    src={studentDetail}
                    alt="Organization"
                    loading="eager"
                    class="w-full mx-auto object-contain"
                    style="aspect-ratio: 16/9;"
                />
            </CardFooter>
        </Card>
    </div>
</div>
