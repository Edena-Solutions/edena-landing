---
import { translations, languages } from "@/i18n/index.ts";

import Layout from "@/layouts/main.astro";
import Hero from "@/components/Hero.astro";
import Section from "@/components/Section.astro";
import GSAPSection from "@/components/ui/gsap-section";
import FAQs from "@/modules/dashboard/FAQs.astro";
import Features from "@/components/Features";
import heroImage from "@/assets/img/screenshots/shared/hero.png";
import quickActions from "@/assets/img/screenshots/dashboard/dashboard_quickactions.png";
import notificationsImage from "@/assets/img/screenshots/dashboard/dashboard_notifications.png";
import calendar from "@/assets/img/screenshots/dashboard/dashboard_calendar.png";
import SoftwareApplicationSchema from "@/components/StructuredData/SoftwareApplication.astro";
import FAQPageSchema from "@/components/StructuredData/FAQPage.astro";
import { getCollection } from "astro:content";

export function getStaticPaths() {
    return languages.map((lang) => ({
        params: { lang },
        props: { lang },
    }));
}

const { lang } = Astro.props;
const t = translations[lang as keyof typeof translations];

// Get FAQs for structured data
const faqsCollection = await getCollection("faqs");
const dashboardFaqs = faqsCollection.find((entry) => entry.id === "faqsDashboard.md");

const features = [
    {
        icon: "BarChart3",
        title: t.features.dashboardFeatures.realTimeAnalytics.title,
        description: t.features.dashboardFeatures.realTimeAnalytics.tagline,
        navigateTo: `/${lang}/dashboard`,
    },
    {
        icon: "TrendingUp",
        title: t.features.dashboardFeatures.performanceInsights.title,
        description: t.features.dashboardFeatures.performanceInsights.tagline,
        navigateTo: `/${lang}/students`,
    },
    {
        icon: "Settings",
        title: t.features.dashboardFeatures.resourceOptimization.title,
        description: t.features.dashboardFeatures.resourceOptimization.tagline,
        navigateTo: `/${lang}/dashboard`,
    },
    {
        icon: "MessageCircle",
        title: t.features.dashboardFeatures.communicationHub.title,
        description: t.features.dashboardFeatures.communicationHub.tagline,
        navigateTo: `/${lang}/app`,
    },
    {
        icon: "Shield",
        title: t.features.dashboardFeatures.complianceTracking.title,
        description: t.features.dashboardFeatures.complianceTracking.tagline,
        navigateTo: `/${lang}/dashboard`,
    },
    {
        icon: "FileText",
        title: t.features.dashboardFeatures.customReports.title,
        description: t.features.dashboardFeatures.customReports.tagline,
        navigateTo: `/${lang}/dashboard`,
    },
];
---

<Layout
    content={{ title: t.meta.dashboardTitle, description: t.meta.dashboardDescription }}
    lang={lang}
>
    <GSAPSection client:load className="grid gap-16" animationType="opacity">
        <Hero
            t={t}
            heroImage={heroImage}
            showBookDemoInHero={true}
            mainTitle={t.dashboard.mainTitle}
            mainDescription={t.dashboard.mainDescription}
            leftCard={{
                title: t.dashboard.notificationsTitle,
                description: t.dashboard.notificationsDescription,
                showButton: true,
            }}
            rightCard={{
                title: t.dashboard.quickActionsTitle,
                description: t.dashboard.quickActionsDescription,
                image: quickActions,
                imageClass: "object-cover md:w-2/3 mx-auto",
                cardClass: "h-110",
                altText: t.altText.quickActions,
            }}
        />
        <Features
            client:load
            t={t}
            features={features}
            title={t.features.dashboardFeatures.title}
            description={t.features.dashboardFeatures.tagline}
        />
        <Section
            t={t}
            sectionTitle={t.dashboard.notificationsAndCalendarTitle}
            sectionDescription={t.dashboard.notificationsAndCalendarDescription}
            leftCard={{
                title: t.dashboard.calendarTitle,
                description: t.dashboard.calendarDescription,
                image: calendar,
                altText: t.altText.calendar,
            }}
            rightCard={{
                title: t.dashboard.realTimeNotificationsExtendedTitle,
                description: t.dashboard.realTimeNotificationsExtendedDescription,
                image: notificationsImage,
                imageClass: "object-cover md:w-2/3 mx-auto",
                cardClass: "h-110",
                altText: t.altText.notifications,
            }}
        />
        <FAQs t={t} />
    </GSAPSection>
    
    <!-- Structured Data -->
    <SoftwareApplicationSchema
        name="Edena - Panel de Control Escolar"
        description={t.meta.dashboardDescription}
        applicationCategory="EducationalApplication"
        operatingSystem={["Web", "iOS", "Android"]}
        url={`https://edena.es/${lang}/dashboard`}
        lang={lang}
    />
    {dashboardFaqs?.data.faqs && (
        <FAQPageSchema 
            faqs={dashboardFaqs.data.faqs} 
            translations={t.faqs}
            lang={lang}
        />
    )}
</Layout>
