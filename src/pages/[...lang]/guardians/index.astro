---
import { translations, languages } from "@/i18n/index.ts";
import Layout from "@/layouts/main.astro";
import Section from "@/components/Section.astro";
import Hero from "@/components/Hero.astro";
import GSAPSection from "@/components/ui/gsap-section";
import FAQs from "@/modules/guardians/FAQs.astro";
import Features from "@/components/Features";
import heroImage from "@/assets/img/screenshots/guardians/guardian_hero.png";
import guardianManagement from "@/assets/img/screenshots/guardians/guardian_management.png";
import appDetail from "@/assets/img/screenshots/app/app_detail.png";
import emailInvoice from "@/assets/img/screenshots/finance/billing_cycle.png";
export function getStaticPaths() {
    return languages.map((lang) => ({
        params: { lang },
        props: { lang },
    }));
}
const { lang } = Astro.props;
const t = translations[lang as keyof typeof translations];

const features = [
    {
        icon: "Bell",
        title: t.features.guardianFeatures.realTimeNotifications.title,
        description: t.features.guardianFeatures.realTimeNotifications.tagline,
        navigateTo: `/${lang}/app`,
    },
    {
        icon: "TrendingUp",
        title: t.features.guardianFeatures.academicProgress.title,
        description: t.features.guardianFeatures.academicProgress.tagline,
        navigateTo: `/${lang}/students`,
    },
    {
        icon: "MessageSquare",
        title: t.features.guardianFeatures.secureMessaging.title,
        description: t.features.guardianFeatures.secureMessaging.tagline,
        navigateTo: `/${lang}/app`,
    },
    {
        icon: "Calendar",
        title: t.features.guardianFeatures.eventCalendar.title,
        description: t.features.guardianFeatures.eventCalendar.tagline,
        navigateTo: `/${lang}/dashboard`,
    },
    {
        icon: "FileText",
        title: t.features.guardianFeatures.digitalDocuments.title,
        description: t.features.guardianFeatures.digitalDocuments.tagline,
        navigateTo: `/${lang}/students`,
    },
    {
        icon: "CreditCard",
        title: t.features.guardianFeatures.paymentPortal.title,
        description: t.features.guardianFeatures.paymentPortal.tagline,
        navigateTo: `/${lang}/finance`,
    },
];
---

<Layout
    content={{ title: t.meta.guardiansTitle, description: t.meta.guardiansDescription }}
    lang={lang}
>
    <GSAPSection client:load className="grid gap-16" animationType="opacity">
        <Hero
            t={t}
            heroImage={heroImage}
            showBookDemoInHero={true}
            mainTitle={t.guardians.mainTitle}
            mainDescription={t.guardians.mainDescription}
            leftCard={{
                title: t.guardians.onboardingTitle,
                description: t.guardians.onboardingDescription,
                showButton: true,
            }}
            rightCard={{
                title: t.guardians.dashboardTitle,
                description: t.guardians.dashboardDescription,
                image: guardianManagement,
            }}
        />
        <Features
            client:load
            t={t}
            features={features}
            title={t.features.guardianFeatures.title}
            description={t.features.guardianFeatures.tagline}
        />
        <Section
            t={t}
            sectionTitle={t.guardians.studentControlTitle}
            sectionDescription={t.guardians.studentControlDescription}
            leftCard={{
                title: t.guardians.appTitle,
                description: t.guardians.appDescription,
                image: appDetail,
                imageClass: "object-cover md:w-2/3 mx-auto",
                cardClass: "h-110",
            }}
            rightCard={{
                title: t.guardians.documentSigningTitle,
                description: t.guardians.documentSigningDescription,
                image: emailInvoice,
            }}
        />
        <FAQs t={t} />
    </GSAPSection>
</Layout>
