---
import type { Translation } from "@/i18n";
import type { ImageMetadata } from "astro";

import { Card, CardHeader, CardContent, CardFooter } from "@/components/ui/card";
import { Image } from "astro:assets";
import BookDemoButton from "@/components/BookDemoButton.astro";

interface HeroCard {
    title: string;
    description: string;
    image?: ImageMetadata;
    imageClass?: string;
    showButton?: boolean;
    cardClass?: string;
}

interface Props {
    t: Translation;
    heroImage: ImageMetadata;
    mainTitle: string;
    mainDescription: string;
    showBookDemoInHero?: boolean;
    leftCard: HeroCard;
    rightCard: HeroCard;
    heroImageClass?: string;
}

const {
    t,
    heroImage,
    mainTitle,
    mainDescription,
    showBookDemoInHero = false,
    leftCard,
    rightCard,
    heroImageClass = "w-full mx-auto object-contain",
} = Astro.props;
---

<div class="grid gap-4">
    <Card
        className="flex flex-col items-center justify-start text-center h-110 sm:h-160 overflow-hidden bg-gray-50 gap-4"
    >
        <CardHeader>
            <h1 class="text-xl font-bold max-w-2xl">{mainTitle}</h1>
        </CardHeader>
        <CardContent className="flex flex-col gap-6 items-center pb-0">
            <p class="text-muted-foreground max-w-150">
                {mainDescription}
            </p>
        </CardContent>
        <CardFooter className="flex flex-col gap-4">
            {showBookDemoInHero && <BookDemoButton t={t} />}
            <Image
                src={heroImage}
                alt="Hero"
                loading="eager"
                class={heroImageClass}
                style="aspect-ratio: 16/9;"
            />
        </CardFooter>
    </Card>

    <div class="grid sm:grid-cols-2 gap-4 px-4">
        <Card
            className="flex rounded flex-col gap-4 items-center justify-center text-center bg-gradient-primary"
        >
            <CardHeader>
                <h2 class="text-xl font-bold max-w-100">{leftCard.title}</h2>
            </CardHeader>
            <CardContent className="flex flex-col gap-6 items-center pb-0">
                <p class="max-w-100">
                    {leftCard.description}
                </p>
            </CardContent>
            {
                leftCard.showButton && (
                    <CardFooter className="flex gap-4">
                        <BookDemoButton t={t} variant="secondary" />
                    </CardFooter>
                )
            }
        </Card>

        <Card
            className={`flex rounded flex-col items-center text-center overflow-hidden bg-gray-50 ${rightCard.cardClass || "h-90 md:h-110"} gap-6`}
        >
            {
                rightCard.title && (
                    <CardHeader className="pb-2">
                        <h2 class="text-xl font-bold">{rightCard.title}</h2>
                    </CardHeader>
                )
            }
            <CardContent
                className={`flex flex-col gap-4 items-center ${rightCard.image ? "pb-0" : ""}`}
            >
                <p class="text-muted-foreground max-w-140">
                    {rightCard.description}
                </p>
            </CardContent>
            {
                rightCard.image && (
                    <CardFooter>
                        <Image
                            src={rightCard.image}
                            alt={rightCard.title || "Image"}
                            loading="eager"
                            class={rightCard.imageClass || "w-full mx-auto object-contain"}
                        />
                    </CardFooter>
                )
            }
        </Card>
    </div>
</div>
